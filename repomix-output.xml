        data: account,
      });
    }

    try {
      account = await this.prisma.vendorBankAccount.create({
        data: {
          account_name,
          account_number,
          bank_name,
          vendorId,
        },
      });
    } catch (err) {
      console.log(err);
      throw new InternalServerErrorException(
        'Unable to create account number. please try again later.',
